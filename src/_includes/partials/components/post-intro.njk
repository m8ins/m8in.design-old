<header class="[ intro ] [ pad-top-900 pad-bottom-600 ] [ split-pair ]">
  <div class="[ post__intro ] [ sf-flow ]">
    <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
    <div class="[ intro__meta ] [ text-500 leading-tight ] [ sf-flow ]">
    <p>{{ author }}</p>
    {% if date %}
    <p><time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | dateFilter }}</time></p>
    {% endif %}
    <p>{{ helpers.getReadingTime(content) }} minute read</p>
  </div>
</header>
